<a href="/pictures"><img src=" /assets/ctlogoanimationlong7.png "alt="Smiley face"  height="310px" width="420px" onmouseover="this.src=' /assets/ctlogoanimation.gif '" onmouseout="this.src=' /assets/ctlogoanimationlong7.png '"class="img-responsive center-block">
</a>
<p id="notice"><%= notice %></p>

<div class="container text-center">
  <div class="panel-heading">
    <!-- <strong>Title:</strong -->
    <h4><%= @picture.title %></h4>
  </div>
<%= image_tag @picture.image(:large) %>
<p>
  <br>
  <strong>Posted by:</strong>
  <%= @picture.user.username %>
  <br>
</p>

<p>
  <%= image_tag @picture.url %>
</p>

<!-- <h3>Reviews</h3> -->

<% @picture.reviews.each do |review| %>
	<p>
    Added: <%= time_ago_in_words review.created_at %> ago
    by: <%= @picture.user.username  %>
		<br>
    <%= review.comment %>
	</p>
<% end %>
</div>

<h6 class="text-center">New Comment</h6>
<%= render 'reviews/form' %>
<div class="container">
<%= link_to 'Edit', edit_picture_path(@picture), style: "color:white", class: "btn stylish-color btn-block" %>
<%= link_to 'Back', pictures_path, style: "color:white", class: "btn stylish-color btn-block" %>
</div>
